{
  "$schema": "https://schemas.tauri.app/config/2",
  "identifier": "com.nooforge.app",
  "productName": "Nooforge",
  "version": "0.1.0",

  "build": {
    "beforeDevCommand": "npm --prefix ../nooforge-solidjs run dev",
    "beforeBuildCommand": "npm --prefix ../nooforge-solidjs run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../nooforge-solidjs/dist"
  },

  "app": {
    "withGlobalTauri": true,

    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main",
          "windows": ["*"],
          "permissions": [
            "core:default",
            "core:event:allow-listen",
            "core:event:allow-emit",
            "dialog:allow-open",
            "dialog:allow-save"
          ]
        }
      ]
    },

    "windows": [
      {
        "title": "Nooforge",
        "width": 1200,
        "height": 900,
        "resizable": true,

        "dragDropEnabled": true
      }
    ]
  },

  "bundle": {
    "active": true,
    "targets": "all"
  },

  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "dialog": {
      "default": true
    },
    "clipboard-manager": {
      "default": true
    }
  }
}
